                    </toggleGroup>
                </RadioButton>
                <RadioButton layoutX="14.0" layoutY="136.0" mnemonicParsing="false" text="Thời gian"
                             toggleGroup="$searchMethod"/>
                <Button layoutX="15.0" layoutY="348.0" mnemonicParsing="false" onAction="#search"
                        prefHeight="15.0" prefWidth="221.0" text="Tìm Kiếm"/>
            </Pane>
            <Pane prefHeight="400.0" prefWidth="596.0">
